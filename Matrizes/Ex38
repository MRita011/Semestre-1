    public static double[][] MatrizTurmas() {
        Scanner in = new Scanner(System.in);
        double[][] matrizG1 = new double[5][20];
        double valor = 0;

        for (int x = 0; x < 5; x++) {
            for (int y = 0; y < 20; y++) {
                do {
                    System.out.println("\nDigite a nota G1 do aluno(a): ");
                    valor = in.nextDouble();
                } while (valor < 0 && valor > 10);
                
                matrizG1[x][y] = valor;
            }
        }

        return matrizG1;
    }

