/* Defina uma classe Usuário, considerando que todo usuário possui:
     * matricula, 
     * nome. 
 * Implemente para esta classe os métodos básicos também.
 */

public class Usuario
{
    private String nome;
    private int matricula;
    
    public Usuario(String nome, int matricula) {
        this.nome = nome;
        
        if (matricula > 0)
            this.matricula = matricula;
            
        else
            this.matricula = 0;
    }
    
    public void setNome(String nome) {
        this.nome = nome;
    }
    
    public String getNome() {
        return nome;
    }
    
    public void setMatricula(int matricula) {
        this.matricula = matricula;
    }
    
    public int getMatricula() {
        return matricula;
    }
}
